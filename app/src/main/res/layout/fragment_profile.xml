<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/grey"
        tools:context=".ui.product_ui.profile.ProfileFragment">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/contact_details"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_large"
            android:layout_marginTop="@dimen/margin_large"
            android:background="@color/white"
            android:drawableStart="@drawable/ic_account"
            android:drawablePadding="@dimen/margin_very_small"
            android:padding="@dimen/margin_very_small"
            android:text="@string/contact_details"
            android:textAllCaps="false"
            android:textSize="@dimen/text_size_large"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/followers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_very_small"
            android:background="@color/white"
            android:drawableStart="@drawable/ic_followers"
            android:drawablePadding="@dimen/margin_very_small"
            android:padding="@dimen/margin_medium"
            android:text="@string/followers"
            android:textAllCaps="false"
            android:textSize="@dimen/text_size_large"
            app:layout_constraintEnd_toEndOf="@+id/my_adverts"
            app:layout_constraintTop_toBottomOf="@+id/my_adverts" />

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_very_small"
            android:background="@color/white"
            android:id="@+id/feedback"
            android:drawableStart="@drawable/ic_feedback"
            android:drawablePadding="@dimen/margin_very_small"
            android:padding="@dimen/margin_medium"
            android:text="@string/feedback"
            android:textAllCaps="false"
            android:textSize="@dimen/text_size_large"
            app:layout_constraintStart_toStartOf="@+id/contact_details"
            app:layout_constraintTop_toBottomOf="@+id/contact_details" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/my_adverts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_large"
            android:layout_marginEnd="@dimen/margin_large"
            android:background="@color/white"
            android:drawableStart="@drawable/ic_adverts"
            android:drawablePadding="@dimen/margin_very_small"
            android:padding="@dimen/margin_medium"
            android:text="@string/my_adverts"
            android:textAllCaps="false"
            android:textSize="@dimen/text_size_large"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>