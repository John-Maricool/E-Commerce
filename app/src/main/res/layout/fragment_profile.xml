<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey"
    tools:context=".product_ui.ProfileFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/contact_details"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:background="@color/white"
        android:drawableStart="@drawable/ic_account"
        android:drawablePadding="@dimen/margin_5"
        android:padding="@dimen/margin_3"
        android:text="@string/contact_details"
        android:textAllCaps="false"
        android:textSize="@dimen/text_size_20"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar" />

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/notification"
        android:layout_marginTop="8dp"
        android:background="@color/white"
        android:drawableStart="@drawable/ic_notifications"
        android:drawablePadding="@dimen/margin_3"
        android:padding="@dimen/margin_5"
        android:text="@string/notifications"
        android:textAllCaps="false"
        android:textSize="@dimen/text_size_20"
        app:layout_constraintEnd_toEndOf="@+id/followers"
        app:layout_constraintTop_toBottomOf="@+id/followers" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/followers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@color/white"
        android:drawableStart="@drawable/ic_followers"
        android:drawablePadding="@dimen/margin_3"
        android:padding="@dimen/margin_12"
        android:text="@string/followers"
        android:textAllCaps="false"
        android:textSize="@dimen/text_size_20"
        app:layout_constraintEnd_toEndOf="@+id/my_adverts"
        app:layout_constraintTop_toBottomOf="@+id/my_adverts" />

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@color/white"
        android:id="@+id/feedback"
        android:drawableStart="@drawable/ic_feedback"
        android:drawablePadding="@dimen/margin_3"
        android:padding="@dimen/margin_12"
        android:text="@string/feedback"
        android:textAllCaps="false"
        android:textSize="@dimen/text_size_20"
        app:layout_constraintStart_toStartOf="@+id/contact_details"
        app:layout_constraintTop_toBottomOf="@+id/contact_details" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/my_adverts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:background="@color/white"
        android:drawableStart="@drawable/ic_adverts"
        android:drawablePadding="@dimen/margin_3"
        android:padding="@dimen/margin_12"
        android:text="@string/my_adverts"
        android:textAllCaps="false"
        android:textSize="@dimen/text_size_20"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar" />

</androidx.constraintlayout.widget.ConstraintLayout>